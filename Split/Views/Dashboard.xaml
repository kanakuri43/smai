<UserControl x:Class="Split.Views.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid Margin="8" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0"
                            Margin="0,0,0,0"
                            Orientation="Horizontal">
                <ComboBox Width="90"                          
                          ItemsSource="{Binding Years}"
                          SelectedValue="{Binding SelectedYear}"
                          SelectedItem="{Binding SelectedYear, Mode=TwoWay}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <prism:InvokeCommandAction 
                            Command="{Binding YearSelectionChanged}" 
                            TriggerParameterPath="AddedItems"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ComboBox>
                <ComboBox Width="50"
                          ItemsSource="{Binding Months}"
                          SelectedValue="{Binding SelectedMonth}"
                          SelectedItem="{Binding SelectedMonth, Mode=TwoWay}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <prism:InvokeCommandAction 
                            Command="{Binding MonthSelectionChanged}" 
                            TriggerParameterPath="AddedItems"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ComboBox>
            </StackPanel>
            <ComboBox Grid.Row="1"
                      Margin="0,0,0,4"
                      ItemsSource="{Binding Sections}"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Code"
                      SelectedValue="{Binding SelectedSectionCode}"
                      SelectedItem="{Binding SelectedSection, Mode=TwoWay}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <prism:InvokeCommandAction Command="{Binding SectionSelectionChanged}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>

            <ListBox Grid.Row="2"
                     ItemsSource="{Binding Employees}"
                     DisplayMemberPath="Name"
                     SelectedValuePath="Code"
                     SelectedValue="{Binding SelectedEmployeeCode}"
                     SelectedItem="{Binding SelectedEmployee, Mode=TwoWay}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <prism:InvokeCommandAction 
                            Command="{Binding EmployeeSelectionChanged}" 
                            TriggerParameterPath="AddedItems"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ListBox>

        </Grid>
        <Grid Grid.Column="1">
            <TabControl Margin="8,0,0,0">
                <TabItem Header="売上">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="200"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       VerticalAlignment="Center"
                                       Text="目標"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       VerticalAlignment="Center"
                                       TextAlignment="Right"
                                       Text="{Binding CurrentSalesTarget ,StringFormat={}{0:N0}}"/>
                            
                            <Controls:MetroProgressBar Grid.Row="2" Grid.Column="3"
                                                       Margin="2"
                                                       Background="LightGray"
                                                       Minimum="0" Maximum="100"
                                                       Value="{Binding SalesProgressRate}" />
                            <TextBlock Grid.Row="2" Grid.Column="2" 
                                       VerticalAlignment="Center"
                                       TextAlignment="Right"
                                       Text="{Binding SalesProgressRate ,StringFormat={}{0:N0} %}"/>


                            
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       VerticalAlignment="Center"
                                       Text="受注"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                       VerticalAlignment="Center"
                                       TextAlignment="Right"
                                       Text="{Binding LatestAmounts[0].FinishedSales ,StringFormat={}{0:N0}}"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                       VerticalAlignment="Center"
                                       Text="未受注"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" 
                                       VerticalAlignment="Center"
                                       TextAlignment="Right"
                                       Text="{Binding LatestAmounts[0].UnfinishedSales ,StringFormat={}{0:N0}}"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" 
                                       VerticalAlignment="Center"
                                       Text="合計"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" 
                                       VerticalAlignment="Center"
                                       TextAlignment="Right"
                                       Text="{Binding LatestAmounts[0].TotalSales ,StringFormat={}{0:N0}}"/>

                        </Grid>
                        <DataGrid Grid.Row="1" 
                                  Visibility="Hidden"
                                  ItemsSource="{Binding ResultCollectionView}"
                                  IsReadOnly="True"
                                  AutoGenerateColumns="False">
                            
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MahApps.Styles.DataGridColumnHeader}">
                                    <Setter Property="HorizontalContentAlignment" Value="Right" />
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                            <DataGridTextColumn Header="日" Binding="{Binding Date}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="売上" 
                                                Binding="{Binding SalesOfRecorded, StringFormat={}{0:N0}}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                                <DataGridTextColumn Header="受注" 
                                                    Binding="{Binding SalesOfReceivedOrders, StringFormat={}{0:N0}}" Width="100" >
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                                <DataGridTextColumn Header="クロージング" 
                                                    Binding="{Binding SalesOfClosing, StringFormat={}{0:N0}}" Width="100" >
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="その他" 
                                                    Binding="{Binding SalesOfWish, StringFormat={}{0:N0}}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="合計" 
                                                    Binding="{Binding SalesOfFinalForecast, StringFormat={}{0:N0}}" Width="140" >
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                    </DataGrid>
                    </Grid>
                </TabItem>
                <TabItem Header="粗利">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="150"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       VerticalAlignment="Center"
                                       Text="目標"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       TextAlignment="Right"
                                       VerticalAlignment="Center"
                                       Text="{Binding CurrentProfitTarget, StringFormat={}{0:N0}}"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       VerticalAlignment="Center"
                                       Text="達成率"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                       TextAlignment="Right"
                                       VerticalAlignment="Center"
                                       Text="{Binding ProfitProgressRate, StringFormat={}{0:N0}}"/>
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       VerticalAlignment="Center"
                                       Text="前期比"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                       VerticalAlignment="Center"
                                       TextAlignment="Right"
                                       Text="{Binding ProfitProgressRate , StringFormat={}{0:N0}}"/>

                        </Grid>

                        <DataGrid Grid.Row="1" 
                                  ItemsSource="{Binding ResultCollectionView}"
                                  AutoGenerateColumns="False">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MahApps.Styles.DataGridColumnHeader}">
                                    <Setter Property="HorizontalContentAlignment" Value="Right" />
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                            <DataGridTextColumn Header="日" Binding="{Binding Date}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="売上" 
                                            Binding="{Binding ProfitOfRecorded, StringFormat={}{0:N0}}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="受注" 
                                            Binding="{Binding ProfitOfRecorded, StringFormat={}{0:N0}}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="クロージング" 
                                            Binding="{Binding ProfitOfClosing, StringFormat={}{0:N0}}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="見込" 
                                                Binding="{Binding ProfitOfWish, StringFormat={}{0:N0}}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>

                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                        
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</UserControl>
